        <!-- Light mode styles -->
  <ResourceDictionary x:Key="LightTheme">
          <SolidColorBrush x:Key="BGColor" Color="White"/>
          <SolidColorBrush x:Key="FGColor" Color="WhiteSmoke"/>
          <SolidColorBrush x:Key="BGButtonColor" Color="#382bf0  " />
